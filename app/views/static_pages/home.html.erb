<% content_for :title, "SEEK Int" %>
    <header class="masthead d-flex">
      <div class="container text-center my-auto">
        <h1 class="mb-5" style="color :white">Seek International</h1>
        <h4 class="mb-5" style="color : white ">
          <em>Search Everything Earn Knowledge</em>
                
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
        </h4>


        <% if current_user %>
       
      
        <%= link_to destroy_user_session_path, class: 'btn btn-xl btn-dark' do %>Logout <% end %>
       <% else %>

      <%= link_to  new_user_registration_path, class: 'btn btn-xl btn-light mr-4' do %>Register <% end %>

       <%= link_to  new_user_session_path, class: 'btn btn-xl btn-dark' do %>Login <% end %>
      

       <% end %>



      </div>
           
      <div class="overlay"></div>
    </header>

    <!-- About -->
    <section class="content-section bg-light" id="about">
      <div class="container text-center">
        <div class="row">
          <div class="col-lg-10 mx-auto">
            <h2>We're empowering a new generation of leaders</h2>
            <p class="lead mb-5">We started out on whatsapp, now we've expanded to 
              <a href="https://www.facebook.com/seekinternational/">Facebook</a>!  and beyond</p>
            <a class="btn btn-dark btn-xl js-scroll-trigger" href="#services">What We Offer</a> |
              <a class="btn btn-dark btn-xl js-scroll-trigger" href="#monthbook">Download  <%= Date::MONTHNAMES[Date.today.month] %> book </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Services -->
    <section class="content-section bg-primary text-white text-center" id="services">
      <div class="container">
        <div class="content-section-heading">
          <h3 class="text-secondary mb-0">Services</h3>
          <h2 class="mb-5">What We Offer</h2>
        </div>
        <div class="row">
          <div class="col-lg-3 col-md-6 mb-5 mb-lg-0">
            <span class="service-icon rounded-circle mx-auto mb-3">
              <i class="icon-book-open"></i>
            </span>
            <h4>
              <strong>Book reading</strong>
            </h4>
            <p class="text-faded mb-0">Get to read with a community</p>
          </div>
          <div class="col-lg-3 col-md-6 mb-5 mb-lg-0">
            <span class="service-icon rounded-circle mx-auto mb-3">
              <i class="icon-people"></i>
            </span>
            <h4>
              <strong>Mentorship</strong>
            </h4>
            <p class="text-faded mb-0">Get mentored for a better life</p>
          </div>
          <div class="col-lg-3 col-md-6 mb-5 mb-md-0">
            <span class="service-icon rounded-circle mx-auto mb-3">
              <i class="icon-graph"></i>
            </span>
            <h4>
              <strong>Money</strong>
            </h4>
            <p class="text-faded mb-0">Learn how to add value to your craft
              <i class="fa fa-heart"></i>
             
          </div>
          <div class="col-lg-3 col-md-6">
            <span class="service-icon rounded-circle mx-auto mb-3">
              <i class="icon-basket"></i>
            </span>
            <h4>
              <strong>Market</strong>
            </h4>
            <p class="text-faded mb-0">Reach the rest of the world</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Callout -->
    <section class="callout"  id="monthbook">
      <div class="container text-center">
        <h2 class="mx-auto mb-5">Our book for this month,
          <em>Sales </em>
          101 </h2>


          <%  if logged_in?(:user) %>
 <%= link_to "https://www.dropbox.com/?landing=dbv2",:target => "_blank", class: 'btn btn-primary btn-xl'   do %>Download Now!  <% end %>
 <%else %>
 <h3 class="mx-auto mb-5"><%= link_to  new_user_session_path do %>Login to download <% end %>
        </h3
 <% end %>


      </div>
    </section>

    <!-- Portfolio -->
    <section class="content-section" id="portfolio">
      <div class="container">
        <div class="content-section-heading text-center">
          <h3 class="text-secondary mb-0">check out our</h3>
          <h2 class="mb-5">Recent Projects</h2>
        </div>
        <div class="row no-gutters">
          <div class="col-lg-6">
            <a class="portfolio-item" href="#">
              <span class="caption">
                <span class="caption-content">
                  <h2>Book reading</h2>
                  <p class="mb-0">January read : Sales 101 by Petra Aba Asamoah</p>
                </span>
              </span>
            
              <%= image_tag("sales101.png", class: "img-fluid") %>
            </a>
          </div>
          <div class="col-lg-6">
            <a class="portfolio-item" href="#">
              <span class="caption">
                <span class="caption-content">
                  <h2>Ice Cream</h2>
                  <p class="mb-0">An event to meet and discuss Sales 101  with Petra</p>
                </span>
              </span>
             <%= image_tag("salesmeetup.jpg", class: "img-fluid") %>
            </a>
          </div>
          
        </div>
      </div>
    </section>

    <section class="content-section bg-primary text-white">
      <div class="container text-center">
        
        <% if current_user.nil? %>
        <h2 class="mb-4">A new / returning member...</h2>
  <%= link_to new_user_session_path, class: 'btn btn-xl btn-dark' do %>Login<% end %>
  <%= link_to new_user_registration_path, class: 'btn btn-xl btn-light mr-4' do %>Register<% end %>
<% else %>

  <%= link_to destroy_user_session_path, class: 'btn btn-xl btn-dark' do %>Logout <% end %>
<% end %>
      </div>
    </section>



    <!-- Map -->
    <section id="contact" class="map">


<iframe  width="100%" height="100%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3971.1788269504714!2d-0.24593085034854306!3d5.540479395963038!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xfdf971535e0a8db%3A0xae7513a7197603e8!2sWaboman+Cl%2C+Accra!5e0!3m2!1sen!2sgh!4v1516715993644"  style="border:0" allowfullscreen></iframe>


      <br/>
    
    </section>




